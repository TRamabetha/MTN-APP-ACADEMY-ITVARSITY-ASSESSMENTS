<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".AddContact">

    <!--ImageView-->
    <ImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        />

    <!--EditText: First Name-->
    <EditText
        android:id="@+id/FirstNameEt"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@id/profileIv"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:hint="First Name"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    <!--EditText: Last Name-->
    <EditText
        android:id="@+id/LastNameEt"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@id/FirstNameEt"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:hint="Last Name"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>

    <!--EditText: Cell Number-->
    <EditText
        android:id="@+id/CellNumEt"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@id/LastNameEt"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:hint="Cell Number"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"/>


    <!--EditText: Email-->
    <EditText
        android:id="@+id/EmailEt"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@id/CellNumEt"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:hint="Email"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"/>

    <!--EditText: Address-->
    <EditText
        android:id="@+id/AddressEt"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@id/EmailEt"
        android:layout_marginTop="5dp"
        android:textColorHint="#c5c5c5"
        android:hint="Home Address"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"/>

    <!--FloatingAActionButton: To save contacts-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_alignParentRight="true" />
</RelativeLayout>